<% provide(:title, 'Branches') %>
<div class="w-full">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= provide(:title, 'Branches') %> </h1>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Branches</h1>
    <%= link_to 'New branch', new_branch_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <table class="table" id="dom_id branch">
    <thead>
      <tr>
        <th scope="col">Fridge</th>
        <th scope="col">Temperature</th>
        <th scope="col">Date</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <div id="branches" class="min-w-full">
        <%= render @branches %>
      </div>
    </tbody>
  </table>

</div>



