<div id="dom_id branch">
  <% if action_name == "index" %>
    <tr>
      <td><%= branch.fridge%></td>
      <td><%= branch.temperature%></td>
      <td><%= branch.created_at.strftime("%d/%m/%Y %H:%M:%S")%></td>
      <% if action_name != "show" %>
        <td><%= link_to t('common.show'), branch, class: "btn btn-success"%></td>
        <td><%= link_to t('common.edit'), edit_branch_path(branch), class: "btn btn-info"%></td>
        <td><%= link_to t('common.destroy'), branch_path(branch), method: :delete, class: "btn btn-danger", data: { 'turbo-method': :delete, 'turbo-confirm': "Are you sure about deleted this fridge?" }%></td>

      <% end %>
    </tr>
  <% else %>
    <br>
    <p class="my-5">
      <strong class="font mb-1"><%= t('branch.fridge') %>:</strong>
      <%= branch.fridge %>
    </p>

    <p class="my-5">
      <strong class="font mb-1"><%= t('branch.temperature') %>:</strong>
      <%= branch.temperature %>
    </p>

    <p class="my-5">
      <strong class="font mb-1"><%= t('branch.created_at') %>:</strong>
      <%= branch.created_at.strftime('%d/%m/%Y %H:%M:%S') %>
    </p>

    <br>
  <% end %>
</div>
